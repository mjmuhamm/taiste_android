<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".both.ItemDetail">

    <LinearLayout
        android:id="@+id/personal_chef_view"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rating_layout"
        android:layout_marginBottom="7dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/initial_layout_personal_chef"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp">


            <ImageView
                android:id="@+id/back_button_personal_chef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@string/back_arrow"
                android:src="@drawable/arrow_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/main"
                android:textSize="17sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="2dp"
            android:textColor="@color/main"
            android:textSize="15sp"
            android:textStyle="bold"/>

            <TextView
                android:id="@+id/signature_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/main"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:textSize="13sp"
                android:textStyle="italic"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/signature_image"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scaleType="center"
            android:src="@drawable/default_image"
            app:shapeAppearanceOverlay="@style/roundedCornersImageView"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/option1Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/item_button"
                        android:padding="7dp"
                        android:src="@drawable/command_unfilled" />

                    <TextView
                        android:id="@+id/option1Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="5dp"
                        android:text="@string/no_item"
                        android:textColor="@color/gray400"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option2Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/item_button"
                        android:padding="7dp"
                        android:src="@drawable/command_unfilled" />

                    <TextView
                        android:id="@+id/option2Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="5dp"
                        android:text="@string/no_item"
                        android:textColor="@color/gray400"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option3Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/item_button"
                        android:padding="7dp"
                        android:src="@drawable/command_unfilled" />

                    <TextView
                        android:id="@+id/option3Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="5dp"
                        android:text="@string/no_item"
                        android:textColor="@color/gray400"
                        android:textSize="15sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/option4Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/item_button"
                        android:padding="7dp"
                        android:src="@drawable/command_unfilled" />

                    <TextView
                        android:id="@+id/option4Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="5dp"
                        android:text="@string/no_item"
                        android:textColor="@color/gray400"
                        android:textSize="15sp" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/brief_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:layout_marginTop="7dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="9dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:textAlignment="center"
            android:textColor="@color/gray400" />

        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray400"
                    android:textSize="11sp"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/main"
                        android:text="@string/how_long_have_you_been_a_personal_chef"/>

                    <TextView
                        android:id="@+id/length_of_personal_chef"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:hint="@string/length_in_years"
                        android:textColor="@color/main"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/main"
                        android:text="@string/what_is_your_categorical_specialty"/>

                    <TextView
                        android:id="@+id/specialty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:hint="@string/specialty"
                        android:textColor="@color/main"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/main"
                        android:text="@string/what_helps_you_excel_in_your_pursuit_of_becoming_a_renowned_chef"/>

                    <TextView
                        android:id="@+id/what_helps_you_excel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:hint="@string/what_helps_you_excel"
                        android:textColor="@color/main"
                        android:textSize="12sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/main"
                        android:text="@string/describe_your_most_prized_accomplishment"/>

                    <TextView
                        android:id="@+id/most_prized_accomplishment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:hint="@string/most_prized_accomplishment"
                        android:textColor="@color/main"
                        android:textSize="12sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/main"
                        android:text="@string/are_you_available_for_trial_runs_weeks_and_or_months"/>

                    <TextView
                        android:id="@+id/availabilty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/main"
                        android:text="@string/length_in_years"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/main"
                        android:text="@string/are_you_open_to_menu_requests"/>

                    <TextView
                        android:id="@+id/open_to_menu_requests"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/main"
                        android:text="@string/yes"/>




                </LinearLayout>





            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="34dp"
        android:layout_centerInParent="true"
        android:layout_height="34dp"/>

    <RelativeLayout
        android:id="@+id/initial_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">


        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/back_arrow"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/item_detail"
            android:textColor="@color/main"
            android:textSize="17sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/item_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/main"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/initial_layout"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="7dp"
        android:textAlignment="center"
        android:textColor="@color/main"
        android:textSize="17sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/add_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:visibility="invisible"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/initial_layout">


        <ImageButton
            android:id="@+id/add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/add_image"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:backgroundTint="@color/white"
            android:padding="6dp"
            android:src="@drawable/camera" />


        <ImageButton
            android:id="@+id/cancel_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/cancel"
            android:padding="6dp"
            android:src="@drawable/cancel"
            android:visibility="invisible" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/accept_or_deny_layout"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image_slider"
        android:visibility="invisible"
        android:layout_marginTop="17dp"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/accept"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textColor="@color/main"
            android:textSize="12sp"
            app:cornerRadius="1dp"
            android:backgroundTint="@color/white"
            android:textAllCaps="false"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/deny"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textColor="@color/red700"
            android:textSize="12sp"
            app:cornerRadius="1dp"
            android:backgroundTint="@color/white"
            android:textAllCaps="false"/>



    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/upload"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:textColor="@color/main"
        android:textSize="12sp"
        app:cornerRadius="1dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/image_slider"
        android:layout_marginTop="17dp"
        android:backgroundTint="@color/white"
        android:textAllCaps="false"/>


    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/image_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/item_description"
        android:layout_below="@id/item_title"
        android:scaleType="center"
        app:iss_auto_cycle="false"
        app:iss_error_image="@drawable/default_image"
        app:iss_placeholder="@drawable/default_image"
        app:iss_title_background="@android:color/transparent" />

    <TextView
        android:id="@+id/item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/rating_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="7dp"
        android:textAlignment="center"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="7dp"
        android:textColor="@color/main"
        android:textSize="14sp"
        android:textStyle="normal" />

    <LinearLayout
        android:id="@+id/rating_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/review_view"
        android:layout_centerInParent="true"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expectation_s_met"
                android:textColor="@color/main"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/expectations_1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/expectations_2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/expectations_3"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/expectations_4"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/expectations_5"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quality"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/main"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/quality_1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/quality_2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/quality_3"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/quality_4"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/quality_5"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chef_rating"
                android:textColor="@color/main"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chef_rating_1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/chef_rating_2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/chef_rating_3"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/chef_rating_4"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/chef_rating_5"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/review_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@id/review_layout"
        android:background="@color/gray"/>

    <RelativeLayout
        android:id="@+id/review_layout"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/reviews_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/review"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reviews"
            android:layout_marginStart="8dp"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textSize="15sp"/>

    </LinearLayout>


        <LinearLayout
            android:id="@+id/additional_info_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:src="@drawable/additional_info"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/additional_info"
                android:layout_marginStart="8dp"
                android:textColor="@color/main"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="15sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pay_layout_personal_chef"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            tools:ignore="RelativeOverlap,UseCompoundDrawables">
            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
