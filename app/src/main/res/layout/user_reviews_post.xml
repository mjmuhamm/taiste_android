<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/review_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="13sp"
        android:layout_gravity="end"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chef_image"
            android:layout_width="57.5dp"
            android:layout_height="57.5dp"
            android:src="@drawable/default_profile" />




        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



        <LinearLayout
            android:id="@+id/initial_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/item_title"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:textColor="@color/main"
                android:textSize="13sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/review"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/main"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/recommend"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/main"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/expectations_met"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/main"
                        android:textSize="13sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1.5dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:contentDescription="@string/expectation_s_met"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/star_filled"/>

                        <TextView
                            android:id="@+id/expectations_met"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main"
                            android:layout_marginStart="5dp"
                            android:layout_gravity="center_vertical"
                            android:textSize="13sp"/>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/quality"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/main"
                        android:textSize="13sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1.5dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:contentDescription="@string/quality"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/star_filled"/>

                        <TextView
                            android:id="@+id/quality_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main"
                            android:layout_marginStart="5dp"
                            android:layout_gravity="center_vertical"
                            android:textSize="13sp"/>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/chef_rating"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/main"
                        android:textSize="13sp"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1.5dp"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:contentDescription="@string/chef_rating"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/star_filled"/>

                        <TextView
                            android:id="@+id/chef_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main"
                            android:layout_marginStart="5dp"
                            android:layout_gravity="center_vertical"
                            android:textSize="13sp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

            <LinearLayout
                android:id="@+id/like_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">


                <ImageView
                    android:id="@+id/like_image"
                    android:layout_width="26dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="26dp"
                    android:contentDescription="@string/item_likes"
                    android:src="@drawable/heart_unfilled"/>

                <TextView
                    android:id="@+id/like_text"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main"
                    android:textSize="13sp"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="normal"/>


            </LinearLayout>

        </RelativeLayout>






    </LinearLayout>


</LinearLayout>