<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/signature_image"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:alpha="0.5"
            android:scaleType="center"
            android:src="@drawable/default_image"
            app:shapeAppearanceOverlay="@style/roundedCornersImageView" />

        <ImageView
            android:id="@+id/edit_personal_chef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:src="@drawable/pencil"
            android:layout_alignParentEnd="true"
            android:padding="10dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/signature_image"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/chef_image"
                android:layout_width="146dp"
                app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
                android:src="@drawable/default_image"
                android:layout_height="142dp"
                android:scaleType="center" />

            <TextView
                android:id="@+id/chef_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:textColor="@color/main"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>



    </RelativeLayout>

    <TextView
        android:id="@+id/brief_introduction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/brief_introduction_and_why_people_should_believe_in_your_ability"
        android:textColor="@color/main"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"/>

    <LinearLayout
        android:id="@+id/rating_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/expectation_s_met"
                android:textColor="@color/main"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/expectations_1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/expectations_2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/expectations_3"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/expectations_4"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/expectations_5"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quality"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/main"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/quality_1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/quality_2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/quality_3"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/quality_4"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/quality_5"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chef_rating"
                android:textColor="@color/main"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chef_rating_1"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/chef_rating_2"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/chef_rating_3"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/chef_rating_4"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

                <ImageView
                    android:id="@+id/chef_rating_5"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginStart="-2.5dp"
                    android:src="@drawable/star_unfilled"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-5dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/arrow_down"
            android:contentDescription="@string/click_for_detail" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/click_for_detail"
            android:layout_marginStart="5dp"
            android:textSize="12sp"
            android:textColor="@color/gray"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/like_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/like_image"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="@string/item_likes"
                    android:src="@drawable/heart_unfilled"/>

                <TextView
                    android:id="@+id/like_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main"
                    android:textSize="13sp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="normal"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="-2dp"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:src="@drawable/dollar_1"
                    android:contentDescription="@string/item_orders" />

                <TextView
                    android:id="@+id/order_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main"
                    android:textSize="13sp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="normal"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="0.4dp"
                    android:src="@drawable/rating"
                    android:contentDescription="@string/item_rating" />

                <TextView
                    android:id="@+id/rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1.2dp"
                    android:textColor="@color/main"
                    android:textSize="13sp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="normal"/>


            </LinearLayout>





        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_height="wrap_content"
            tools:ignore="RelativeOverlap,UseCompoundDrawables">

            <TextView
                android:id="@+id/item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="@color/main"
                android:textSize="16sp"
                android:textStyle="bold"/>


            <ImageView
                android:id="@+id/order_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/item_price"
                android:layout_marginStart="7dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/dollar"/>

        </LinearLayout>



    </RelativeLayout>




</LinearLayout>