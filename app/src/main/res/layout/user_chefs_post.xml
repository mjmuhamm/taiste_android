<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="horizontal"
        tools:ignore="UselessParent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chef_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/default_profile" />

        <TextView
            android:id="@+id/chef_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chef_image"
            android:textColor="@color/main"
            android:textSize="13sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginEnd="7dp">

            <TextView
                android:id="@+id/item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is an item title"
                android:textColor="@color/main"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/like_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:contentDescription="@string/item_likes"
                        android:src="@drawable/heart_filled"/>

                    <TextView
                        android:id="@+id/like_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main"
                        android:layout_marginStart="10dp"
                        android:textSize="13sp"
                        android:layout_gravity="center"
                        android:textStyle="normal"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="-2dp"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/dollar_1"
                        android:contentDescription="@string/item_orders" />

                    <TextView
                        android:id="@+id/order_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/main"
                        android:layout_marginStart="10dp"
                        android:textSize="13sp"
                        android:layout_gravity="center"
                        android:textStyle="normal"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="0.4dp"
                        android:src="@drawable/rating"
                        android:contentDescription="@string/item_rating" />

                    <TextView
                        android:id="@+id/rating_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1.2dp"
                        android:textColor="@color/main"
                        android:textSize="13sp"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:textStyle="normal"/>


                </LinearLayout>





            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>